                            div.col-md-6
                                div.picture
                                    div.picture-container
                                        img.img-responsive(src='img/profile.jpg')
            div.row
                div.col-xs-12
                    div.text-right
                        button.btn.btn-danger.text-uppercase(type='submit') SAVE
